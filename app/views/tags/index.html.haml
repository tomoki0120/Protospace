.filter-nav
  .container
    .row
      %ul.nav.nav-pills.col-lg-11
        %li.active{role: "presentation"}
          =link_to 'Popular PROTO',populars_path
        %li.active{role: "presentation"}
          =link_to 'Newest PROTO',newests_path
      = button_tag class: "btn btn-default col-lg-1" do
        = link_to 'view tag',tags_path
.container.proto-list
  .row
    - @tags.each do |tag|
      .col-sm-4.col-md-3.proto-content
        .thumbnail
          =button_tag class: "btn btn-tag" do
            = link_to tag.name, tag_path(tag.id)
          .tag-meta
            = link_to "#{tag.taggings_count}projects", tag_path(tag.id), class: "label label-default tag-list-number"



